<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	<div>
		<%= f.label :email %></br>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :name %></br>
		<%= f.text_field :name %>
	</div>
  	<div class="actions">
    	<%= f.submit "Sign up" %>
  	</div>
<% end %>
